# Importa√ß√µes
from ultralytics import YOLO
import matplotlib.pyplot as plt
from PIL import Image
import os
from google.colab import files

# Solicita upload da imagem
print("üîº Por favor, selecione uma imagem para an√°lise (ex: imagem_teste.jpg)")
uploaded = files.upload()

# Pega o caminho da imagem enviada
image_path = list(uploaded.keys())[0]

# Verifica se a imagem foi recebida corretamente
assert os.path.exists(image_path), f"Imagem n√£o encontrada: {image_path}"

# Carrega o modelo YOLOv8 pr√©-treinado
model = YOLO('yolov8l.pt')  # 'n' = nano (mais r√°pido e leve para testes iniciais)

# Executa a detec√ß√£o
results = model(image_path)

# Salva a imagem com as detec√ß√µes
results[0].save(filename='resultado_yolo.jpg')

# Exibe a imagem com caixas e r√≥tulos
img_result = Image.open('resultado_yolo.jpg')
plt.figure(figsize=(10, 8))
plt.imshow(img_result)
plt.axis('off')
plt.title('üì¶ Detec√ß√£o com YOLOv8 (baseline)')
plt.show()


# Bloco 2 - Transfer Learning com MobileNetV2
# --------------------------------------------
# Importa√ß√µes espec√≠ficas de deep learning
!pip install -q tensorflow tensorflow_datasets

# Imports
import tensorflow as tf
import tensorflow_datasets as tfds
import matplotlib.pyplot as plt
import numpy as np

# Verificar GPU (opcional)
print("GPU dispon√≠vel:", tf.config.list_physical_devices('GPU'))



# Carregar o dataset de gatos vs cachorros
(ds_train, ds_val), ds_info = tfds.load(
    'cats_vs_dogs',
    split=['train[:80%]', 'train[80%:]'],
    shuffle_files=True,
    as_supervised=True,
    with_info=True
)

# Pr√©-processamento: redimensiona e normaliza as imagens
IMG_SIZE = (160, 160)

def format_img(image, label):
    image = tf.image.resize(image, IMG_SIZE)
    image = tf.cast(image, tf.float32) / 255.0
    return image, label

BATCH_SIZE = 32
AUTOTUNE = tf.data.AUTOTUNE

ds_train = ds_train.map(format_img, num_parallel_calls=AUTOTUNE)
ds_val = ds_val.map(format_img, num_parallel_calls=AUTOTUNE)

ds_train = ds_train.cache().shuffle(1000).batch(BATCH_SIZE).prefetch(AUTOTUNE)
ds_val = ds_val.cache().batch(BATCH_SIZE).prefetch(AUTOTUNE)


# Carrega o modelo base pr√©-treinado no ImageNet
base_model = tf.keras.applications.MobileNetV2(input_shape=IMG_SIZE + (3,),
                                               include_top=False,
                                               weights='imagenet')
base_model.trainable = False # Congela a base


# Adiciona camadas finais para classifica√ß√£o bin√°ria
model_transfer = tf.keras.Sequential([
    base_model,
    tf.keras.layers.GlobalAveragePooling2D(),
    tf.keras.layers.Dropout(0.2),
    tf.keras.layers.Dense(1, activation='sigmoid')
])

# Compila o modelo
model_transfer.compile(optimizer=tf.keras.optimizers.Adam(),
                       loss=tf.keras.losses.BinaryCrossentropy(),
                       metrics=['accuracy'])

# Treina o modelo
epochs = 3
history = model_transfer.fit(ds_train,
                              validation_data=ds_val,
                              epochs=epochs)

# Plota a curva de aprendizado
acc = history.history['accuracy']
val_acc = history.history['val_accuracy']
loss = history.history['loss']
val_loss = history.history['val_loss']

plt.figure(figsize=(10, 6))
plt.plot(acc, label='Acur√°cia Treino')
plt.plot(val_acc, label='Acur√°cia Valida√ß√£o')
plt.xlabel('√âpocas')
plt.ylabel('Acur√°cia')
plt.legend(loc='lower right')
plt.title('Curva de Acur√°cia - Transfer Learning')
plt.show()


from PIL import ImageDraw
import cv2

# Recarrega a imagem original
original_img = Image.open(image_path).convert("RGB")
img_width, img_height = original_img.size

# Faz a detec√ß√£o novamente (ou reutiliza o results[0])
detections = results[0].boxes

# Faz uma c√≥pia da imagem para desenhar resultados
img_annotated = original_img.copy()
draw = ImageDraw.Draw(img_annotated)

# Loop sobre cada detec√ß√£o
for i, box in enumerate(detections):
    # Coordenadas da caixa
    x1, y1, x2, y2 = box.xyxy[0].tolist()
    conf_yolo = box.conf[0].item()
    class_yolo = int(box.cls[0].item())
    label_yolo = results[0].names[class_yolo]

    # Recorte da regi√£o detectada
    cropped = original_img.crop((x1, y1, x2, y2))

    # Redimensiona e normaliza como o modelo espera
    cropped_resized = cropped.resize(IMG_SIZE)
    img_array = np.array(cropped_resized) / 255.0
    img_array = np.expand_dims(img_array, axis=0)  # adiciona batch

    # Previs√£o com seu modelo transfer
    pred = model_transfer.predict(img_array)[0][0]
    label_transfer = "dog" if pred > 0.5 else "cat"
    conf_transfer = pred if pred > 0.5 else 1 - pred

    # Desenha a caixa com as duas predi√ß√µes
    display_label = f"{label_transfer} ({conf_transfer:.2f}) | YOLO: {label_yolo} ({conf_yolo:.2f})"
    draw.rectangle([x1, y1, x2, y2], outline="lime", width=2)
    draw.text((x1, y1 - 10), display_label, fill="black")

# Exibe a imagem com anota√ß√µes duplas (YOLO e classificador)
plt.figure(figsize=(12, 8))
plt.imshow(img_annotated)
plt.axis('off')
plt.title("üì∑ Classifica√ß√£o das Regi√µes Detectadas pelo Modelo Transfer Learning")
plt.show()


# Bloco 3 ‚Äì Fine-Tuning com mais dados (aprendizado cont√≠nuo)

# Descongela parte do modelo base
base_model.trainable = True

# Define quantas camadas queremos ajustar (a partir da camada 100)
fine_tune_at = 100

for layer in base_model.layers[:fine_tune_at]:
    layer.trainable = False

# Compila novamente com taxa de aprendizado mais baixa
model_transfer.compile(optimizer=tf.keras.optimizers.Adam(learning_rate=1e-5),
                       loss='binary_crossentropy',
                       metrics=['accuracy'])

# Define novas √©pocas de treinamento
fine_tune_epochs = 5
total_epochs = epochs + fine_tune_epochs

# Treina com os dados de valida√ß√£o agora como treino
history_finetune = model_transfer.fit(ds_val,
                                      validation_data=ds_val,
                                      epochs=fine_tune_epochs)

# Junta hist√≥rico antigo + novo para visualiza√ß√£o cont√≠nua
acc += history_finetune.history['accuracy']
val_acc += history_finetune.history['val_accuracy']
loss += history_finetune.history['loss']
val_loss += history_finetune.history['val_loss']

# Plota curva de aprendizado completa
plt.figure(figsize=(10, 6))
plt.plot(range(total_epochs), acc, label='Acur√°cia Treino')
plt.plot(range(total_epochs), val_acc, label='Acur√°cia Valida√ß√£o')
plt.xlabel('√âpocas')
plt.ylabel('Acur√°cia')
plt.legend(loc='lower right')
plt.title('üìà Curva de Aprendizado ‚Äì Aprendizado Cont√≠nuo')
plt.show()


